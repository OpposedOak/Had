def vytvor_tabulku(vyska,sirka):
    #Tvorba tabulky
    tabulka = []
    for i in range(vyska):
        tabulka_vnorena = []
        for b in range(sirka):
            tabulka_vnorena.append(".")
        tabulka.append(tabulka_vnorena)
        
    return tabulka

def nakresli_mapu(souradnice,tabulka):

    for prvek in souradnice:
        x,y = prvek
        tabulka[x][y] = "x"
        
    for vnorena_tabulka in tabulka:
        for prvek in vnorena_tabulka:
            print(prvek, end=' ')
        print()
    return tabulka
        
def pohyb(souradnice,smer):
    x,y = souradnice [-1]
    
    if smer == "v":
        y_nove = y+1
        souradnice.append((x,y_nove))
        
    elif smer == "z":
        y_nove = y-1
        souradnice.append((x,y_nove))
        
    elif smer == "j":
        x_nove = x+1
        souradnice.append((x_nove,y))
        
    elif smer == "s":
        x_nove = x-1
        souradnice.append((x_nove,y)) 
        
    souradnice.remove(souradnice[0])
    return souradnice
    
def had():
    
    vyska = 10
    sirka = 10
    souradnice = [(0,0)] 
    tabulka = vytvor_tabulku(vyska,sirka) 
    
    while True:
        smer = input("Zadej smer (s,j,v,z):") 
        souradnice = pohyb(souradnice,smer)
        nakresli_mapu(souradnice, tabulka)
        
had()
